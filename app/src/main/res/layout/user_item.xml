<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/user_item_profileimage"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/user_item_username"
        android:layout_toRightOf="@+id/user_item_profileimage"
        android:layout_toEndOf="@id/user_item_profileimage"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:textSize="20sp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="#05df29"
        android:id="@+id/user_item_status_on"
        android:visibility="gone"
        android:layout_below="@+id/user_item_username"
        android:layout_toRightOf="@+id/user_item_profileimage"
        android:layout_toEndOf="@+id/user_item_profileimage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-15dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="#bfbfbf"
        android:visibility="gone"
        android:id="@+id/user_item_status_off"
        android:layout_below="@+id/user_item_username"
        android:layout_toRightOf="@+id/user_item_profileimage"
        android:layout_toEndOf="@+id/user_item_profileimage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_item_username"
        android:layout_marginTop="5dp"
        android:id="@+id/last_message"
        android:text="text"
        android:paddingTop="5dp"
        android:layout_marginLeft="15dp"
        android:maxLines="1"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/user_item_profileimage"/>






</RelativeLayout>